<%- include('partials/header'); -%>
<div class="container">
    <h1 style="text-align: center;">Edit your blog-<%=campground.name %> </h1>
    <div class="row">
        
        <div style="width:45%; margin: 20px  auto;">
<form class=""action="/campground/<%= campground._id %>?_method=PUT" method="POST">
   <div class="form-group">
   <input type="text" name="campground[name]" value="<%= campground.name %>" class="form-control">
   </div>
   <div class="form-group">
   <input type="text" name="campground[image]" value="<%= campground.image %>" class="form-control">
   </div>
   <div class="form-group">
    <input type="text" name="campground[description]" value="<%= campground.description %>" class="form-control">
    </div>

   <div class="form-group">
   <button class="btn btn-primary btn-md" style="margin: 0 auto;">Submit</button>
   </div>

</form>
<a href="/campground">Go Back</a>
</div>
</div>
</div>
<%- include('partials/footer'); -%>